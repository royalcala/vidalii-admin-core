{
  "name": "mikro-orm-koa-ts-example",
  "version": "0.0.1",
  "description": "Example integration of MikroORM into Koa (in typescript)",
  "author": "Martin Adamek",
  "license": "MIT",
  "scripts": {
    "start": "tsc && node dist/server",
    "dev": "nodemon --ext ts  --watch '**.*ts' --exec 'ts-node src --transpile-only '",
    "start:dev": "nodemon --watch 'src/**/*.ts' --exec 'ts-node' --transpile-only src",
    "build": "tsc"
  },
  "dependencies": {
    "@mikro-orm/core": "^4.4.4",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@mikro-orm/sqlite": "^4.4.4",
    "cors": "^2.8.5",
    "express-graphql": "^0.12.0",
    "glob": "^7.1.6",
    "graphql": "^15.5.0",
    "graphql-playground-middleware-express": "^1.7.22",
    "graphql-tools": "^7.0.4",
    "koa": "^2.13.0",
    "koa-body": "^4.2.0",
    "koa-router": "^9.1.0",
    "reflect-metadata": "^0.1.13",
    "typescript": "^4.2.2"
  },
  "devDependencies": {
    "@mikro-orm/cli": "^4.0.0-rc.6",
    "@types/cors": "^2.8.10",
    "@types/glob": "^7.1.3",
    "@types/koa": "^2.11.3",
    "@types/koa-router": "^7.4.1",
    "nodemon": "^2.0.4",
    "ts-node": "^9.1.1"
  },
  "mikro-orm": {
    "useTsNode": true,
    "configPaths": [
      "./app/orm.config.ts",
      "./dist/orm.config.js"
    ]
  }
}
